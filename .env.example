APP_NAME=AI Chatbot Backend
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# Security Settings (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
ALLOWED_HOSTS=*

# CORS Settings
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# Database Settings
DATABASE_URL=postgresql://postgres:password@localhost:5432/chatbot_db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECTION_TIMEOUT=5

# OpenAI Settings (REQUIRED)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_TOP_P=1.0
OPENAI_FREQUENCY_PENALTY=0.0
OPENAI_PRESENCE_PENALTY=0.0
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# Embeddings Settings
EMBEDDINGS_MODEL=text-embedding-ada-002
EMBEDDINGS_DIMENSION=1536

# Conversation Settings
MAX_CONVERSATION_LENGTH=50
MAX_MESSAGE_LENGTH=4000
CONVERSATION_CONTEXT_WINDOW=10
DEFAULT_SYSTEM_PROMPT=You are a helpful AI assistant.

# Rate Limiting Settings
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STORAGE=redis

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.txt,.pdf,.docx,.md
UPLOAD_DIR=uploads

# Monitoring Settings
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_INTERVAL=30

# WebSocket Settings
WEBSOCKET_TIMEOUT=600
WEBSOCKET_MAX_SIZE=1048576
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# Emotion Analysis Settings
EMOTION_ANALYSIS_ENABLED=true
EMOTION_CONFIDENCE_THRESHOLD=0.6
EMOTION_MODELS=vader,textblob

# Personalization Settings
PERSONALIZATION_ENABLED=true
PERSONALIZATION_CACHE_TTL=3600
MIN_INTERACTIONS_FOR_PERSONALIZATION=5

# Background Tasks Settings
ENABLE_BACKGROUND_TASKS=true
TASK_QUEUE_NAME=chatbot_tasks
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# Caching Settings
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000

# Email Settings (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=

# Testing Settings
TESTING=false
TEST_DATABASE_URL=